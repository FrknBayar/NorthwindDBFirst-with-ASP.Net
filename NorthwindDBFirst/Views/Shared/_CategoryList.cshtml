@model List<Category>

@{
    ViewData["Title"] = "CategoryList";
    
}

<h1>Category List</h1>

<a asp-action="AddCategory" class="btn btn-dark">Add New Category</a>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-secondary">Edit</a> | 
                    <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete');">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
